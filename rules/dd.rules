rule "Sunset"
when
    Channel 'astro:sun:home:set#event' triggered START
then
    IsItDark.postUpdate(ON)
end

rule "Sunrise"
when
    Channel 'astro:sun:home:rise#event' triggered START
then
    IsItDark.postUpdate(OFF)
	WeSleepBedroom.postUpdate(OFF)
	end
